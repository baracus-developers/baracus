sub getContent
{
	my $r = "";
	#$r = $r."<form name='createAdd'>\n";
	$r = $r.BATools::getCurrentProcSelectionList("", "enabled", "size=12 onChange='procChange()';");
	#$r = $r."</form>\n";
	
	return $r;
}